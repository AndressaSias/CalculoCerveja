<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainActivity">


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B54C19" />

    <TextView
        android:id="@+id/txtInstrucao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:text="Digite o valor(R$) da cerveja de acordo com a quantidade (ml)"
        android:textAlignment="center"
        android:textColor="#18452A"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt350"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Lata 350ml"
        android:textColor="#18452A"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edt350"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor em R$"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt355"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Long Neck 355ml"
        android:textColor="#18452A"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edt355"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor em R$"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt473"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Latão 473ml"
        android:textColor="#18452A"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edt473"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor em R$"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Garrafa 600ml"
        android:textColor="#18452A"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edt600"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor em R$"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt1000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Litrão 1000ml"
        android:textColor="#18452A"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edt1000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor em R$"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textColor="#673AB7"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Calcular"
        android:textColor="#FFFFFF"
        />


</LinearLayout>